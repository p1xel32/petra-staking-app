{
  "name": "@aptos-labs/siwa",
  "version": "0.2.5",
  "description": "Library of utilities for Sign in with Aptos",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptos-labs/sign-in-with-aptos.git",
    "directory": "packages/siwa"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./legacy": {
      "types": "./dist/legacy.d.ts",
      "import": "./dist/legacy.js",
      "require": "./dist/legacy.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.33.2",
    "@aptos-labs/wallet-standard": ">=0.3.0",
    "@noble/hashes": "^1.7.1"
  },
  "peerDependencies": {
    "@aptos-labs/ts-sdk": ">=1.33.2"
  },
  "devDependencies": {
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "aptos",
    "apt",
    "siwa",
    "web3",
    "blockchain",
    "dapps",
    "wallet"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  }
}