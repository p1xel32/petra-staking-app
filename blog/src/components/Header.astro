---
// blog/src/components/Header.astro
import { SITE_URL } from '../consts';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const navLinks = [
  { href: SITE_URL, text: 'Main App' },
  { href: `${base}/`, text: 'Blog' },
  { href: `${base}/about`, text: 'About' },
];
---
<header class="w-full backdrop-blur-xl bg-white/5 border-b border-white/10 shadow-md px-4 sm:px-6 py-3 sm:py-4 flex justify-between items-center sticky top-0 z-50">
  <a
    href="https://aptcore.one"
    class="flex items-baseline focus:outline-none focus:ring-2 focus:ring-purple-400 rounded-md p-1 -ml-1"
    aria-label="aptcore.one homepage"
  >
    <h1 class="text-2xl sm:text-3xl font-bold tracking-tight inline-flex items-baseline text-aptcore-purple">
      <span>aptcore</span>
      <img
        src="/blog/aptcore-logo.svg"
        alt="aptcore.one logo separator"
        class="h-4 w-4 sm:h-5 sm:w-5 mx-1 relative top-px"
        aria-hidden="true"
        width="20" height="20"
      />
      <span>one</span>
    </h1>
  </a>
  <div class="space-x-4 text-sm sm:text-base">
    {navLinks.map(link => (
      <a href={link.href} class="text-white hover:text-aptcore-purple transition-colors">{link.text}</a>
    ))}
  </div>
</header>
