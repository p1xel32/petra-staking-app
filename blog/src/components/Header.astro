---
// blog/src/components/Header.astro
import { SITE_URL } from '../consts'; 

const BLOG_LOGO_URL = "/blog/aptcore-logo.svg"; 
const BLOG_BASE = "/blog";

// URLs for tools on the main site
const APY_CALCULATOR_URL = "/tools/aptos-staking-apy-calculator";
const LOCKUP_VISUALIZER_URL = "/tools/aptos-staking-lockup-visualizer";

const navLinks = [
  { href: SITE_URL, text: 'Main App' },
  { href: APY_CALCULATOR_URL, text: 'APY Calculator' },      // New link
  { href: LOCKUP_VISUALIZER_URL, text: 'Lockup Visualizer' }, // New link
  { href: BLOG_BASE, text: 'Blog Home' },
  { href: `${BLOG_BASE}/about`, text: 'About Us' },
  { href: `${BLOG_BASE}/faq`, text: 'Blog FAQ' },
  { href: `${BLOG_BASE}/contact`, text: 'Contact' }
];
---
<header class="w-full backdrop-blur-xl bg-white/5 border-b border-white/10 shadow-md px-4 sm:px-6 py-3 sm:py-4 flex justify-between items-center sticky top-0 z-50">
  <a
    href={SITE_URL}
    class="flex items-baseline focus:outline-none focus:ring-2 focus:ring-purple-400 rounded-md p-1 -ml-1"
    aria-label="aptcore.one main application"
  >
    <div class="text-2xl sm:text-3xl font-bold tracking-tight inline-flex items-baseline text-aptcore-purple" role="img" aria-label="aptcore.one logo">
      <span>aptcore</span>
      <img
        src={BLOG_LOGO_URL}
        alt=""
        class="h-4 w-4 sm:h-5 sm:w-5 mx-1 relative top-px"
        aria-hidden="true"
        width="20" height="20"
      />
      <span>one</span>
    </div>
  </a>
  <nav aria-label="Blog navigation">
    <div class="space-x-1 sm:space-x-2 text-xs sm:text-sm"> {/* Adjusted spacing for more links if needed */}
      {navLinks.map(link => {
        const isTrulyExternal = link.href.startsWith('http') && !link.href.startsWith(SITE_URL);

        return (
          <a
            href={link.href}
            class="text-zinc-200 hover:text-aptcore-purple transition-colors px-1.5 py-1 sm:px-2 rounded-md"
            target={isTrulyExternal ? '_blank' : undefined}
            rel={isTrulyExternal ? 'noopener noreferrer' : undefined}
          >
            {link.text}
          </a>
        );
      })}
    </div>
  </nav>
</header>