---
// src/components/Footer.astro
import { SITE_URL } from '../consts'; // Ensure SITE_URL is imported if not already implicitly available
const base = import.meta.env.BASE_URL.replace(/\/$/, ''); // base is defined but not used in this nav group
const currentYear = new Date().getFullYear();
const contactPageUrl = "/blog/contact"; // Define the contact page URL
---
<footer class="bg-brand-bg-dark text-brand-text-secondary border-t border-white/10 py-8 text-center px-4 sm:px-6 lg:px-8">
  <nav class="mb-4 space-x-4 text-sm sm:text-base">
    <a href={SITE_URL} class="hover:text-aptcore-purple transition-colors">Main App</a>
    <span class="text-zinc-500">|</span>
    <a href="/blog" class="hover:text-aptcore-purple transition-colors">Blog</a>
    <span class="text-zinc-500">|</span>
    <a href="/blog/about" class="hover:text-aptcore-purple transition-colors">About</a>
    <span class="text-zinc-500">|</span>
    <a href={contactPageUrl} class="hover:text-aptcore-purple transition-colors">Contact</a>
  </nav>
  <nav class="mb-4 space-x-4 text-sm">
    <a href="/blog/legal/disclaimer" class="hover:text-aptcore-purple transition-colors">Disclaimer</a>
    <span class="text-zinc-500">|</span>
    <a href="/blog/legal/terms" class="hover:text-aptcore-purple transition-colors">Terms of Use</a>
  </nav>
  <p class="text-xs text-zinc-500">
    © {currentYear} aptcore.one — Secure Aptos (APT) Staking.
  </p>
</footer>