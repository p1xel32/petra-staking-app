---
import { SITE_TITLE, SITE_DESCRIPTION, SITE_URL } from '../consts';

export interface Props {
  title?: string;
  description?: string;
  image?: string; // relative or absolute
  canonicalURL?: string | URL;
}

const {
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  image = '/og-image.png',
  canonicalURL = new URL(Astro.url.pathname, SITE_URL),
} = Astro.props;

// Base path (e.g. '/blog')
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// ðŸ”— Social / Open Graph image â€” absolute URL
const socialImageURL = image.startsWith('http')
  ? image
  : new URL(`${base}${image.startsWith('/') ? '' : '/'}${image}`, SITE_URL).href;
---
<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL.toString()} />

<!-- Open Graph / Twitter -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:url" content={canonicalURL.toString()} />
<meta name="twitter:card" content="summary_large_image" />

<!-- Favicons -->
<link rel="icon" href={`${base}/favicon.ico`} sizes="any" />
<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
<link rel="apple-touch-icon" href={`${base}/apple-touch-icon.png`} />
