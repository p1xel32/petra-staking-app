---
// blog/src/layouts/BlogPost.astro
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, BLOG_CANONICAL_ROOT } from '../consts';

const { title, description, pubDate, updatedDate, heroImage, heroImageAlt } = Astro.props;

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const postUrl = new URL(`${base}/${Astro.params.slug}`, 'https://aptcore.one').href;
const heroImageUrl = heroImage?.startsWith('http')
  ? heroImage
  : base + (heroImage?.startsWith('/') ? '' : '/') + heroImage;
---
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <BaseHead
      title={title}
      description={description || SITE_DESCRIPTION}
      image={heroImageUrl}
      canonicalURL={postUrl}
    />
  </head>
  <body class="bg-brand-bg-dark text-brand-text-light font-sans antialiased min-h-screen flex flex-col">
    <Header />
    <main class="py-8 flex-grow">
      <article class="container mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
        <p class="text-sm text-brand-text-secondary mb-2">
          <FormattedDate date={pubDate} />
          {updatedDate && (
            <span class="block italic text-xs mt-1">
              Last updated on <FormattedDate date={updatedDate} />
            </span>
          )}
        </p>

        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{title}</h1>

        {heroImageUrl && (
          <img
            src={heroImageUrl}
            alt={heroImageAlt ?? `Hero image for ${title}`}
            class="w-full h-auto rounded-lg shadow mb-8"
            loading="lazy"
          />
        )}

        <div class="prose prose-invert lg:prose-xl max-w-none">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
