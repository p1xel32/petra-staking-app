---
// blog/src/layouts/BlogPost.astro
import '../styles/global.css';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro'; 
import Header from '../components/Header.astro';     
import Footer from '../components/Footer.astro';     
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, BLOG_CANONICAL_ROOT } from '../consts'; 

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
// heroImage path from frontmatter should be like "/blog-assets/my-image.jpg"
// It will be resolved relative to the blog's root by Astro.
const heroImageUrl = heroImage; 
// Construct canonical URL using BLOG_CANONICAL_ROOT
const postUrl = new URL(`${Astro.params.slug}/`, BLOG_CANONICAL_ROOT).href; 
---
<html lang="en" class="dark">
	<head>
		<BaseHead 
            title={title} 
            description={description || SITE_DESCRIPTION} 
            image={heroImageUrl} 
            canonicalURL={postUrl} 
        />
	</head>
	<body class="bg-brand-bg-dark text-brand-text-light font-sans antialiased min-h-screen flex flex-col">
		<Header />
		<main class="py-8 flex-grow">
			<article class="container mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
				
                <div class="text-center mb-8">
                    <div class="text-sm text-brand-text-secondary mb-2">
                        <FormattedDate date={pubDate} />
                        {
                            updatedDate && (
                                <div class="last-updated-on italic text-xs mt-1">
                                    Last updated on <FormattedDate date={updatedDate} />
                                </div>
                            )
                        }
                    </div>
                    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{title}</h1>
                    <hr class="border-zinc-700 my-6" />
                </div>

                {heroImageUrl && (
                    <div class="mb-8">
                        <img 
                            width={1020} 
                            height={510} 
                            src={heroImageUrl} 
                            alt={`Hero image for ${title}`} 
                            class="w-full h-auto object-cover rounded-lg shadow-lg"
                            loading="lazy"
                        />
                    </div>
                )}
				
				<div class="prose prose-invert lg:prose-xl max-w-none">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
